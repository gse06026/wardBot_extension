{
  "manifest_version": 3,
  "name": "Ward Bot",
  "version": "0.1.0",
  "description": "Your AI-powered research support.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "wardIcon_lowres.png",
      "48": "wardIcon.png",
      "128": "wardIcon.png"
    }
  },
  "icons": {
    "16": "wardIcon_lowres.png",
    "48": "wardIcon.png",
    "128": "wardIcon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ]
}
