{
  "manifest_version": 3,
  "name": "Ward Bot",
  "version": "0.1.0",
  "description": "Your AI-powered research support.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ward.png",
      "32": "ward.png",
      "48": "ward.png",
      "128": "ward.png"
    }
  },
  "icons": {
    "16": "ward.png",
    "32": "ward.png",
    "48": "ward.png",
    "128": "ward.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
